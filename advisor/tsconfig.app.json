{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.vue",
    "env.d.ts",
    "src/**/*",
    "**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist", "**/*.js", "**/*.md", "src/**/*.md"],
  "compilerOptions": {
    // "composite": true,
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
